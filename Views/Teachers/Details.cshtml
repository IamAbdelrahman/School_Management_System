@model School_Management_System.ViewModel.TeacherViewModel

@{
    ViewData["Title"] = "Teacher Details";
}

<h2 class="mb-4">👨‍🏫 Teacher Details</h2>

<div class="card shadow p-4 mb-4">
    <h4>@Model.Name</h4>
    <p><strong>📅 Hire Date:</strong> @Model.HireDate?.ToString("yyyy-MM-dd")</p>
    <p><strong>📞 Phone:</strong> @Model.Phone</p>
    <p><strong>📧 Email:</strong> @Model.Email</p>
    <p><strong>🧑‍💼 Role:</strong> @Model.Role</p>
    <p><strong>🏛️ Department:</strong> @Model.DepartmentName</p>
    <p><strong>📘 Total Courses:</strong> @Model.CourseCount</p>
    <p><strong>🏫 Total Classes:</strong> @Model.ClassCount</p>
</div>

@if (Model.CourseCount > 0)
{
    <div class="mb-4">
        <h5 class="text-primary">📘 Courses Assigned</h5>
        <ul class="list-group">
            @foreach (var course in ViewBag.Courses as List<string>)
            {
                <li class="list-group-item">@course</li>
            }
        </ul>
    </div>
}

@if (Model.ClassCount > 0)
{
    <div class="mb-4">
        <h5 class="text-success">🏫 Classes Assigned</h5>
        <ul class="list-group">
            @foreach (var cls in ViewBag.Classes as List<string>)
            {
                <li class="list-group-item">@cls</li>
            }
        </ul>
    </div>
}

<a asp-action="Index" class="btn btn-secondary">⬅️ Back to List</a>