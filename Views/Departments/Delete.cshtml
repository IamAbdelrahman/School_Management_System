@model School_Management_System.ViewModel.DepartmentViewModel
@{
    ViewData["Title"] = "Delete Department";
    var hasDependencies = !string.IsNullOrEmpty(Model.Courses) || !string.IsNullOrEmpty(Model.Teachers);
}

<h2 class="mb-4 text-danger">🗑️ Delete Department</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="card border-danger shadow-sm">
    <div class="card-body">
        <div class="alert alert-danger">
            @if (hasDependencies)
            {
                <strong>⚠️ You cannot delete this department because it has assigned teachers or courses.</strong>
            }
            else
            {
                <span>Are you sure you want to delete this department?</span>
            }
        </div>

        <dl class="row">
            <dt class="col-sm-3">Department Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Courses</dt>
            <dd class="col-sm-9">@Model.Courses</dd>

            <dt class="col-sm-3">Teachers</dt>
            <dd class="col-sm-9">@Model.Teachers</dd>
        </dl>

        @if (!hasDependencies)
        {
            <form asp-action="Delete" asp-route-id="@Model.DepartmentID" method="post">
                <input type="hidden" asp-for="DepartmentID" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        }
        else
        {
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        }
    </div>
</div>