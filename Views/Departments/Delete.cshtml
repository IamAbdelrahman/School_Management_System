@model School_Management_System.ViewModel.DepartmentViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2 class="mb-4 text-danger">🗑 Delete Department</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow p-4">
    <h4 class="text-warning">Are you sure you want to delete this department?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Department Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        @if (TempData["Error"] != null)
        {
            <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
        }
        else
        {
            <button type="submit" class="btn btn-danger me-2" disabled>Yes, Delete</button>
        }
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>