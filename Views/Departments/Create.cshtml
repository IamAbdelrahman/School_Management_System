@model School_Management_System.ViewModel.DepartmentViewModel
@{
    ViewData["Title"] = "Create";
    SelectList teacherOptions = new SelectList(ViewBag.Teachers, "TeacherID", "Name");
    SelectList courseOptions = new SelectList(ViewBag.Courses, "CourseID", "Name");
}

<h2 class="mb-4">➕ Add New Department</h2>
<form method="post" asp-action="Save" asp-controller="Departments">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input class="form form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <label asp-for="TeacherId"></label>
                <select class="form form-control" asp-for="TeacherId" asp-items="teacherOptions">
                    <option value="">--Select Teacher--</option>
                </select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CourseId"></label>
                <select class="form form-control" asp-for="CourseId" asp-items="courseOptions">
                    <option value="">--Select Course--</option>
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

<!--client side!-->
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>