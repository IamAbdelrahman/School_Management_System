@model School_Management_System.ViewModel.EnrollmentViewModel

@{
    ViewData["Title"] = "Delete Enrollment";
}

<h2 class="mb-4 text-danger">🗑️ Delete Enrollment</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow p-4">
    <h4 class="text-warning">Are you sure you want to delete this enrollmenet?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Student Name</dt>
        <dd class="col-sm-9">@Model.Student?.Name</dd>

        <dt class="col-sm-3">Student Id</dt>
        <dd class="col-sm-9">@Model.Student?.StudentID</dd>

        <dt class="col-sm-3">Course Name</dt>
        <dd class="col-sm-9">@Model.Course?.Name</dd>

        <dt class="col-sm-3">Enrollment Date</dt>
        <dd class="col-sm-9">@Model.EnrollmentDate</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.EnrollmentID" method="post">
        <input type="hidden" asp-for="EnrollmentID" />
        <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
