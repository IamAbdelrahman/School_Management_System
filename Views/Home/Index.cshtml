@{
    ViewData["Title"] = "Home";
}

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-card:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
            z-index: 2;
        }

    .carousel-caption {
        bottom: 20%;
    }

        .carousel-caption h1 {
            font-size: 3rem;
            font-weight: bold;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.5);
        }

        .carousel-caption a.btn {
            font-size: 1.2rem;
            padding: 12px 24px;
            font-weight: 600;
        }
</style>

<!-- 🎞️ Slider -->
<div id="carouselExampleIndicators" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://images.pexels.com/photos/17639079/pexels-photo-17639079.jpeg" class="d-block w-100" alt="Students">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold">Explore Our Students</h1>
                <a href="/Students" class="btn btn-warning btn-lg mt-2">View Students</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://images.pexels.com/photos/5212348/pexels-photo-5212348.jpeg" class="d-block w-100" alt="Teachers">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold">Meet Our Teachers</h1>
                <a href="/Teachers" class="btn btn-warning btn-lg mt-2">View Teachers</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://images.pexels.com/photos/301920/pexels-photo-301920.jpeg" class="d-block w-100" alt="Courses">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4 fw-bold">Our Courses</h1>
                <a href="/Courses" class="btn btn-warning btn-lg mt-2">View Courses</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- 🛠️ Our Services -->
<section class="py-5 bg-light text-center">
    <div class="container">
        <h2 class="fw-bold mb-4">Our Services</h2>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body">
                        <i class="bi bi-people-fill fs-1 text-primary mb-3"></i>
                        <h5 class="card-title">Student Management</h5>
                        <p class="card-text">Monitor academic progress and attendance records.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body">
                        <i class="bi bi-person-workspace fs-1 text-success mb-3"></i>
                        <h5 class="card-title">Teacher Tools</h5>
                        <p class="card-text">Manage classes, grades, and student interactions easily.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body">
                        <i class="bi bi-book-fill fs-1 text-warning mb-3"></i>
                        <h5 class="card-title">Course Planning</h5>
                        <p class="card-text">Build and assign engaging courses and content.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body">
                        <i class="bi bi-bar-chart-fill fs-1 text-danger mb-3"></i>
                        <h5 class="card-title">Reporting & Analysis</h5>
                        <p class="card-text">Visualize student performance and generate reports.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

