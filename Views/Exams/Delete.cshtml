@model School_Management_System.Models.Exam

@{
    ViewData["Title"] = "🗑️ Delete Exam";
    bool hasQuestions = ViewBag.HasQuestions ?? false;
}

<h2 class="mb-4 text-danger">🗑️ Delete Exam</h2>

<div class="card border-danger shadow-sm">
    <div class="card-body">
        @if (hasQuestions)
        {
            <div class="alert alert-warning">
                ⚠️ You cannot delete this exam because it contains one or more related questions.
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                Are you sure you want to delete this exam? This action cannot be undone.
            </div>
        }

        <dl class="row">
            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Grade</dt>
            <dd class="col-sm-9">@Model.Grade</dd>

            <dt class="col-sm-3">Course ID</dt>
            <dd class="col-sm-9">@Model.CourseID</dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.ExamID" method="post">
            <input type="hidden" asp-for="ExamID" />
            <button type="submit" class="btn btn-danger" @(hasQuestions ? "disabled" : "")>Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
