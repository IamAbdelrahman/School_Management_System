@model Exam

@{
    ViewData["Title"] = "Exam Details";
}

<h2 class="mb-4">Exam Details</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title">Exam Information</h5>
        <dl class="row">
            <dt class="col-sm-3">Exam ID</dt>
            <dd class="col-sm-9">@Model.ExamID</dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Grade</dt>
            <dd class="col-sm-9">@Model.Grade</dd>

            <dt class="col-sm-3">Number of Questions</dt>
            <dd class="col-sm-9">@Model.Questions?.Count()</dd>
        </dl>
    </div>
</div>

@if (Model.Questions != null && Model.Questions.Any())
{
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">📝 Questions in this Exam</h5>
            <table class="table table-striped table-bordered shadow-sm mt-3">
                <thead class="table-dark text-center">
                    <tr>
                        <th>#</th>
                        <th>Body</th>
                        <th>Mark</th>
                        <th>Correct Answer</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Questions.Count(); i++)
                    {
                        var q = Model.Questions.ElementAt(i);
                        <tr class="text-center align-middle">
                            <td>@(i + 1)</td>
                            <td>@q.Body</td>
                            <td>@q.Mark</td>
                            <td>@q.CorrectAnswer</td>
                            <td>@q.Type</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<a asp-action="Index" class="btn btn-secondary mt-3">⬅️ Back to Exams</a>
