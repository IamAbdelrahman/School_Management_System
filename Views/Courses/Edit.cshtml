@model School_Management_System.Models.Course

@{
    ViewData["Title"] = "Edit Course";
}

<h2 class="mb-4">✏️ Edit Course</h2>

<div class="card shadow p-4">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="CourseID" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TeacherID" class="control-label"></label>
            <select asp-for="TeacherID" asp-items="ViewBag.Teachers" class="form-control"></select>
            <span asp-validation-for="TeacherID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DepartmentID" class="control-label"></label>
            <select asp-for="DepartmentID" asp-items="ViewBag.Departments" class="form-control"></select>
            <span asp-validation-for="DepartmentID" class="text-danger"></span>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}