@model CourseViewModel

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-4">
    <h2 class="text-danger">@ViewData["Title"]</h2>
    <hr />

    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this course?</h4>
        <p class="mb-0">This action cannot be undone and will permanently remove the course record.</p>
    </div>

    <div class="card border-danger mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Course Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Title)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DepartmentName)</dd>

                <dt class="col-sm-3">Teacher</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TeacherName)</dd>

                <dt class="col-sm-3">Enrolled Students</dt>
                <dd class="col-sm-9">
                    @if (Model.EnrolledStudents?.Any() == true)
                    {
                        <span class="badge bg-warning text-dark">Warning: @Model.EnrolledStudents.Count students are enrolled</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No enrolled students</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mb-3">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger" id="deleteButton">
                <i class="fas fa-trash-alt"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#deleteButton').click(function(e) {
                @if (Model.EnrolledStudents?.Any() == true)
                {
                        <text>
                        if (!confirm('This course has enrolled students. Deleting it will remove all student enrollments. Are you absolutely sure?')) {
                            e.preventDefault();
                            return false;
                        }
                        </text>
                }
                else
                {
                        <text>
                        if (!confirm('Are you sure you want to delete this course?')) {
                            e.preventDefault();
                            return false;
                        }
                        </text>
                }
                $(this).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Deleting...');
                $(this).prop('disabled', true);
            });
        });
    </script>
}