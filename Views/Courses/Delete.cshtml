@model School_Management_System.ViewModel.CourseViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2 class="mb-4 text-danger">🗑️ Delete Course</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow p-4">
    <h4 class="text-warning">Are you sure you want to delete this course?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Course Name</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Course Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Teacher </dt>
        <dd class="col-sm-9">@Model.TeacherName</dd>

        <dt class="col-sm-3">Department</dt>
        <dd class="col-sm-9">@Model.DepartmentName</dd>

    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
