@model School_Management_System.ViewModel.CourseViewModel

@{
    ViewData["Title"] = "Details";

}

<h2 class="mb-4">📚 Courses</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Course Name</dt>
            <dd class="col-sm-9">@Model.Title</dd>
            <dt class="col-sm-3">Course Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
            <dt class="col-sm-3">Assigned Department</dt>
            <dd class="col-sm-9">@Model.DepartmentName</dd>
            <dt class="col-sm-3">Assigned Teacher</dt>
            <dd class="col-sm-9">@Model.TeacherName</dd>

        </dl>
    </div>
</div>

<h5 class="mb-3">🧑‍🏫 Students</h5>

@if (Model.EnrolledStudents != null && Model.EnrolledStudents.Any())
{
    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Student ID</th>
                <th>Student Name</th>
                <th>Studnet Age</th>
                <th>Assigned Class</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.EnrolledStudents)
            {
                <tr>
                    <td>@student.StudentID</td>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@student.Class?.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No students assigned to this class.</p>
}
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>