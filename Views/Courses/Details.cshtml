@using School_Management_System.ViewModel

@{
    ViewData["Title"] = "Details";
}

@model CourseViewModel

<h2 class="mb-4">📚 Course Details</h2>
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Course Name</dt>
            <dd class="col-sm-9">@Model.Title</dd>
            <dt class="col-sm-3">Course Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
            <dt class="col-sm-3">Course Department</dt>
            <dd class="col-sm-9">@Model.DepartmentName</dd>
            <dt class="col-sm-3">Course Teacher</dt>
            <dd class="col-sm-9">@Model.TeacherName</dd>
        </dl>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>




