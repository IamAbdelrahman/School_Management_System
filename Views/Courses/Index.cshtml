@using School_Management_System.ViewModel

@{
    ViewData["Title"] = "Courses";
    var searchTerm = ViewBag.SearchTerm as string;
    var pageNumber = (int)ViewBag.PageNumber;
    var totalPages = (int)ViewBag.TotalPages;
}

@model List<CourseViewModel>

<h2 class="mb-4">📚 Courses</h2>


<div class="d-flex justify-content-between align-items-center mb-3">
    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
    {
        <a asp-action="Create" class="btn btn-success mb-3">➕ Add New Course</a>
    }
    <form method="get" asp-action="Index" asp-controller="Courses" class="d-flex" role="search">
        <input type="text" name="searchTerm" class="form-control me-2 w-100" placeholder="🔍 Search by Name" value="@searchTerm" />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>
</div>


<table class="table table-striped table-bordered shadow" id="coursesTable">
    <thead class="table-dark text-center">
        <tr>
            <th>NO</th>
            <th>Title</th>
            <th>Department</th>
            <th>Teacher</th>
            <th>Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tableBody">
        @if (Model != null && Model.Any())
        {
            int i = 1;
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@i</td>
                    <td>@item.Title</td>
                    <td>@item.DepartmentName</td>
                    <td>@item.TeacherName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mx-1">
                            <i class="bi bi-eye"></i> View
                        </a>
                        @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        }
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No courses found.</td>
            </tr>
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == pageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-searchTerm="@searchTerm">@i</a>
                </li>
            }
        </ul>
    </nav>
}

