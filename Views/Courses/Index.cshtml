@using School_Management_System.ViewModel

@{
    ViewData["Title"] = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<CourseViewModel>

<h2 class="mb-4">📚 Courses</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Add New Course</a>

<table class="table table-striped table-bordered shadow">
    <thead class="table-dark text-center">
        <tr>
            <th>#</th>
            <th>Course Name</th>
            <th>Description</th>
            <th>Teacher</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int i = 1;
            foreach (var course in Model)
            {
                <tr class="align-middle">
                    <td class="text-center">@i</td>
                    <td>@course.Name</td>
                    <td>@course.Description</td>
                    <td>@course.TeacherName</td>
                    <td>@course.DepartmentName</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@course.CourseID" class="btn btn-info btn-sm mx-1">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a asp-action="Edit" asp-route-id="@course.CourseID" class="btn btn-warning btn-sm mx-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@course.CourseID" class="btn btn-danger btn-sm mx-1">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No courses available.</td>
            </tr>
        }
    </tbody>
</table>
