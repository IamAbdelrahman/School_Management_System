@model School_Management_System.ViewModel.StudentViewModel

@{
    ViewData["Title"] = "Delete Student";
}

<h2 class="mb-4 text-danger">🗑️ Delete Student</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow p-4">
    <h4 class="text-warning">Are you sure you want to delete this student?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Age</dt>
        <dd class="col-sm-9">@Model.Age</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@Model.Phone</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Class ID</dt>
        <dd class="col-sm-9">@Model.ClassID</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.StudentID" method="post">
        <input type="hidden" asp-for="StudentID" />
        <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
