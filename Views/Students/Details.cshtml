@model School_Management_System.ViewModel.StudentViewModel

@{
    ViewData["Title"] = "Details";

}

<h2 class="mb-4">🧑‍🏫 Student Details</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Student Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">Student Age</dt>
            <dd class="col-sm-9">@Model.Age</dd>
            <dt class="col-sm-3">Student Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>
            <dt class="col-sm-3">Student Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>
            <dt class="col-sm-3">Assigned Class</dt>
            <dd class="col-sm-9">@Model.Class?.Name</dd>

        </dl>
    </div>
</div>

<h5 class="mb-3">📚 Courses</h5>

@if (Model.Enrollments != null && Model.Enrollments.Any())
{
    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Enrollment ID</th>
                <th>Course Name</th>
                <th>Course Description</th>
                <th>Enrollment Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Enrollments)
            {
                <tr>
                    <td>@student.EnrollmentID</td>
                    <td>@student.Course.Name</td>
                    <td>@student.Course.Description</td>
                    <td>@student.EnrollmentDate</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No students assigned to this class.</p>
}
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>