@model List<School_Management_System.ViewModel.StudentViewModel>

@{
    ViewData["Title"] = "Index";


    var searchTerm = ViewBag.SearchTerm as string;
    var pageNumber = (int)ViewBag.PageNumber;
    var totalPages = (int)ViewBag.TotalPages;
}

<h2 class="mb-4">🧑‍🏫 Students</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    @* <a asp-action="Create" class="btn btn-success">➕ Add New Student</a> *@

    <form method="get" asp-action="Index" class="d-flex" role="search">
        <input type="text" name="searchTerm" class="form-control me-2" placeholder="🔍 Search by Student name" value="@searchTerm" />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>
</div>

<table class="table table-striped table-bordered shadow">
    <thead>
        <tr>
            <th>ID</th>
            <th>Student Name</th>
            <th>Class Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
         @if (Model != null && Model.Any())
        {
            int i = 1 + (pageNumber - 1) * 5;
            foreach(var s in Model)
            {
                <tr class="align-middle text-center">
                    <td>@s.StudentID</td>
                    <td>@s.Name</td>
                    <td>@s.ClassName</td>
                    <td>@s.Age</td>
                    <td>@s.Gender</td>
                    <td>@s.Phone</td>
                    <td>@s.Address</td>

                </tr>
            }

        }
    </tbody>
</table>


@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == pageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-searchTerm="@searchTerm">@i</a>
                </li>
            }
        </ul>
    </nav>
}
