@model School_Management_System.ViewModel.StudentViewModel
@{
    ViewData["Title"] = "Create";
    SelectList classOptions = new SelectList(ViewBag.Classes, "ClassID", "Name");

}

<h2 class="mb-4">➕ Add New Student</h2>

<form method="post" asp-action="Save" asp-controller="Students">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input class="form form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Age"></label>
                <input class="form form-control" asp-for="Age" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address"></label>
                <input class="form form-control" asp-for="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Gender"></label>
                <select class="form form-control" asp-for="Gender">
                    <option value="">--Select Gender--</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Phone"></label>
                <input class="form form-control" asp-for="Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ClassID"></label>
                <select class="form form-control" asp-for="ClassID" asp-items="classOptions">
                    <option value="0">--Select Class--</option>
                </select>
                <span asp-validation-for="ClassID" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

<!--client side!-->
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
