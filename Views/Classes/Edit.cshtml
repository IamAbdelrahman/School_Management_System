@model School_Management_System.ViewModel.ClassViewModel

@{
    ViewData["Title"] = "Edit Class";
}

<h2>Edit Class</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ClassID" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="GradeLevel" class="form-label"></label>
        <input asp-for="GradeLevel" class="form-control" />
        <span asp-validation-for="GradeLevel" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TeacherID" class="form-label">Assigned Teacher</label>
        <select asp-for="TeacherID" asp-items="Model.Teachers" class="form-select">
            <option value="">-- Select Teacher --</option>
        </select>
        <span asp-validation-for="TeacherID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}