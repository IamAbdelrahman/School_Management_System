@model List<School_Management_System.ViewModel.ClassViewModel>

@{
    ViewData["Title"] = "All Classes";
}

<h2>All Classes</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Add New Class</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Class Name</th>
            <th>Grade Level</th>
            <th>Assigned Teacher</th>
            <th>Student Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cls in Model)
        {
            <tr>
                <td>@cls.Name</td>
                <td>@cls.GradeLevel</td>
                <td>@(cls.TeacherName ?? "—")</td>
                <td>@(cls.Students?.Count ?? 0)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@cls.ClassID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@cls.ClassID" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@cls.ClassID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>