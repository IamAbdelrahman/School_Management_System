@model Question

@{
    ViewData["Title"] = "🗑️ Delete Question";
}

<h2 class="mb-4 text-danger">🗑️ Delete Question</h2>

<div class="card border-danger shadow-sm">
    <div class="card-body">
        <div class="alert alert-danger">
            Are you sure you want to delete this question? This action cannot be undone.
        </div>

        <dl class="row">
            <dt class="col-sm-3">Header</dt>
            <dd class="col-sm-9">@Model.Header</dd>

            <dt class="col-sm-3">Body</dt>
            <dd class="col-sm-9">@Model.Body</dd>

            <dt class="col-sm-3">Mark</dt>
            <dd class="col-sm-9">@Model.Mark</dd>

            <dt class="col-sm-3">Correct Answer</dt>
            <dd class="col-sm-9">@Model.CorrectAnswer</dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Exam ID</dt>
            <dd class="col-sm-9">@Model.ExamID</dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.QuestionID" method="post">
            <input type="hidden" asp-for="QuestionID" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
